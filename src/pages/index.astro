---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Variant } from '~/enums';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'briq.mx',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero image={{ src: '~/assets/images/hero/cover.png', alt: 'briq' }}>
    <Fragment slot="tagline">
      <span>CONVIÉRTETE EN</span>
    </Fragment>
    <Fragment slot="title">
      socio de
      <span class="text-sky dark:text-white highlight">briq.mx</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline font-bold"> Por primera y única ocasión, vuélvete accionista de la plataforma</span>
      <span class="hidden sm:block">
        de financiamiento colectivo que está revolucionando las inversiones en bienes raíces.</span
      >
    </Fragment>
  </Hero>

  <HeroText
    callToAction={{
      text: 'Me interesa ser socio',
      href: 'https://playbusiness.mx/entrar?utm_campaign=segundo-sueldo&utm_medium=organic&utm_source=2s_domain&utm_content=landing&utm_term=',
      target: '_blank',
      variant: Variant.Primary,
    }}
  >
    <Fragment slot="title">
      <span class="block text-white">¿Quieres ser</span>
      <span class="text-sky dark:text-white highlight">nuestro socio?</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline font-bold text-white text-base"
        >Preferimos que nuestra comunidad se quede con las acciones.</span
      >
      <span class="hidden sm:block text-white text-base">
        Levantaremos una ronda de inversión en septiembre. ¿Por qué no darle la oportunidad a los inversionistas que ya
        confían en nosotros y usan briq.mx? #ElValorSeQuedaEnCasa</span
      >
    </Fragment>
  </HeroText>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    callToAction={{
      text: 'Me interesa ser socio',
      href: 'https://playbusiness.mx/entrar?utm_campaign=segundo-sueldo&utm_medium=organic&utm_source=2s_domain&utm_content=landing&utm_term=',
      target: '_blank',
      variant: Variant.Primary,
    }}
    items={[
      {
        title: 'Regístrate para recibir los detalles por correo.',
      },
      {
        title: '¡Únete al webinar de lanzamiento y resuelve tus dudas!',
        description: ' (psst... te enviaremos invitación por correo 🤫)',
      },
      {
        title: 'Invierte a través de Play Business y recibe acciones de briq.mx',
        description: 'Aprovecha al máximo el interés compuesto reinvirtiendo automáticamente tus regalías.',
      },
    ]}
    image={{
      src: '~/assets/images/feature.png',
      alt: 'Features segundo sueldo',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Quiero ser socio ¿qué hago?</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>

